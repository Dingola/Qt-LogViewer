    @ColorComboBoxBackgroundHover: #f0f4f8;
    @ColorComboBoxBorder: #d1d5db;
    @ColorComboBoxSelectionBackground: #b3d4fc;
    @ColorCheckBoxBackground: #f5f5f5;
    @ColorCheckBoxChecked: #90caf9;
    @ColorCheckBoxHover: #e3f2fd;
    @ColorTrace: #607d8b;
    @ColorDebug: #388e3c;
    @ColorInfo: #1976d2;
    @ColorWarning: #ffb300;
    @ColorError: #d32f2f;
